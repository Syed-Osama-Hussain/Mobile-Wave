<% include partials/header %>
<div class="container">
  
<h1 style="text-align: center;">Edit <%=device.company%> <%=device.model%></h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/device/<%=device._id%>?_method=PUT" method="POST">
  
    <div class="form-group">
  <input class="form-control" type="text" name="device[model]" value="<%=device.model%>" required="required">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="device[company]"  value="<%=device.company%>" required="required">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="device[description]" value="<%=device.description%>" required="required">
    </div>

   <div class="form-group">
  <input class="form-control" type="text" name="device[type]" value="<%=device.type%>" required="required">
   </div>


     <div class="form-group">
      <input class="form-control" type="number" name="device[price]" value="<%=device.price%>" required="required">
       </div>

   <div class="form-group">
  <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>    
    
</form>
<a class="btn btn-info" href="/home">Go Back</a>
</div>
</div>
<% include partials/footer %>