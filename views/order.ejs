<% include partials/header %>
<div class="container">
  
<h1 style="text-align: center;">Order Device</h1>
<div style="width: 30%; margin: 25px auto;">
<form id="loginForm" action="/order/<%=id%>" method="POST">
  
    <div class="form-group">
  <input class="form-control" type="text" name="name" placeholder="name" required="required">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" inputmode="numeric" pattern="[-+]?[0-9]*[.,]?[0-9]+" name="number"  placeholder="contact number" required="required">
    </div>

   <div class="form-group">
  <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>    
    
</form>
</div>
</div>
<% include partials/footer %>