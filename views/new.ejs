<% include partials/header %>
<div class="container">
  
<h1 style="text-align: center;">Add a new Advertise</h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/device" method="POST" enctype="multipart/form-data">
  
    <div class="form-group">
  <input class="form-control" type="text" name="device[model]" placeholder="model" required="required">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="device[company]"  placeholder="company/name of accessory" required="required">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="device[description]" placeholder="description" required="required">
    </div>

   <div class="form-group">
  <input class="form-control" type="text" name="device[type]" placeholder="device type" required="required">
   </div>

   <div class="form-group">
    <input type="file" name="image"  placeholder="select images from device" multiple required="required">
     </div>

     <div class="form-group">
      <input class="form-control" type="number" name="device[price]" placeholder="Price in Rs" required="required">
       </div>

   <div class="form-group">
  <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>    
    
</form>
<a class="btn btn-info" href="/home">Go Back</a>
</div>
</div>
<% include partials/footer %>